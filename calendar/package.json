{
  "name": "hiroshima-it-study-session-calendar",
  "version": "0.1.0",
  "description": "広島のIT関連の勉強会やイベントをカレンダー表示するウェブアプリケーション",
  "keywords": [
    "広島",
    "IT",
    "勉強会",
    "カレンダー",
    "connpass",
    "エンジニア",
    "プログラミング"
  ],
  "private": true,
  "engines": {
    "node": ">=18.18.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "prebuild": "mkdir -p public && cp -r assets/* public/ 2>/dev/null || true",
    "build": "next build --no-lint && npm run copy-assets",
    "copy-assets": "mkdir -p out && cp -r assets/* out/ 2>/dev/null || true && echo 'Assets copied to out directory'",
    "start": "next start",
    "lint": "next lint",
    "export": "next build && next export",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "dependencies": {
    "next": "14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "swr": "^2.3.6",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^22.0.0",
    "@types/react": "^18.2.25",
    "@types/react-dom": "^18.2.11",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.51.0",
    "eslint-config-next": "14.0.0",
    "jsdom": "^23.0.1",
    "msw": "^2.0.8",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "vitest": "^1.0.4"
  }
}
