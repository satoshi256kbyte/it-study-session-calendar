{
  "name": "admin-frontend",
  "version": "0.1.0",
  "description": "広島IT勉強会カレンダー管理画面",
  "private": true,
  "engines": {
    "node": ">=23.10.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "next dev -p 3001",
    "prebuild": "mkdir -p public && cp -r src/assets/* public/ 2>/dev/null || true",
    "build": "next build",
    "start": "next start -p 3001",
    "lint": "next lint",
    "setup": "cp .env.example .env.local && echo '📝 .env.local を作成しました。適切な値を設定してください。'",
    "deploy": "../scripts/deploy-frontend.sh"
  },
  "dependencies": {
    "@aws-amplify/ui-react": "^6.11.2",
    "@next/swc-darwin-x64": "^15.5.0",
    "aws-amplify": "^6.15.3",
    "next": "^15.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^18.2.25",
    "@types/react-dom": "^18.2.11",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.51.0",
    "eslint-config-next": "14.0.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5"
  }
}
